<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gabrielle.camactivity.MainActivity">

    <Button
        android:id="@+id/camButton"
        style="?attr/imageButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp"
        android:background="@android:color/background_light"
        android:drawableTop="@drawable/camera"
        android:text="@string/callCam"
        android:textSize="24sp" />

    <Button
        android:id="@+id/galButton"
        style="?attr/imageButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/camButton"
        android:layout_marginTop="47dp"
        android:background="@android:color/background_light"
        android:drawableTop="@drawable/gallery"
        android:text="@string/callGal"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/description"
        android:visibility="invisible"
        app:srcCompat="@mipmap/ic_launcher" />

</RelativeLayout>
